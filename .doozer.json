{
  "targets": {
    "xenial-i386": {
      "buildenv": "xenial-i386",
      "builddeps": ["build-essential", "cmake"],
      "buildcmd": ["mkdir build-i386", "cd build-i386", "cmake ..", "cmake --build .", "ctest --output-on-failure"]
    },
    "xenial-amd64": {
      "buildenv": "xenial-amd64",
      "builddeps": ["build-essential", "cmake"],
      "buildcmd": ["mkdir build-amd64", "cd build-amd64", "cmake ..", "cmake --build .", "ctest --output-on-failure"]
    },
    "fedora24-x86_64": {
      "buildenv": "fedora24-x86_64",
      "builddeps": ["cmake", "make", "clang"],
      "buildcmd": ["mkdir build-x86_64", "cd build-x86_64", "CXX=clang++ cmake ..", "cmake --build .", "ctest --output-on-failure"]
    },
    "osx": {
      "buildenv": "osx",
      "builddeps": ["build-essential"],
      "buildcmd": ["make"]
    }
  }
}
